@model WebProject.Models.Student
@{
    ViewData["Title"] = "Student Details";
}

<h2>Student Details</h2>

<table class="details-table">
    <tr><th>ID</th><td>@Model.StudentID</td></tr>
    <tr><th>First Name</th><td>@Model.FirstName</td></tr>
    <tr><th>Middle Name</th><td>@Model.MiddleName</td></tr>
    <tr><th>Last Name</th><td>@Model.LastName</td></tr>
    <tr><th>Email</th><td>@Model.Email</td></tr>
    <tr><th>Phone</th><td>@Model.Phone</td></tr>
    <tr><th>Program</th><td>@Model.Program</td></tr>
    <tr><th>Enrollment Type</th><td>@Model.EnrollmentType</td></tr>
    <tr><th>Expected Graduation Year</th><td>@Model.ExpectedGraduationYear</td></tr>
    <tr><th>Date of Birth</th><td>@Model.DateOfBirth?.ToShortDateString()</td></tr>
    <tr><th>Gender</th><td>@Model.Gender</td></tr>
    <tr><th>Nationality</th><td>@Model.Nationality</td></tr>
    <tr><th>Street Address</th><td>@Model.StreetAddress</td></tr>
    <tr><th>City</th><td>@Model.City</td></tr>
    <tr><th>Province</th><td>@Model.Province</td></tr>
    <tr><th>Zip Code</th><td>@Model.ZipCode</td></tr>
    <tr><th>Country</th><td>@Model.Country</td></tr>
    <tr><th>Additional Info</th><td>@Model.AdditionalInfo</td></tr>
</table>

<br />
<a href="/Home/Students" class="btn-action">Back</a>
<a href="/Home/Edit/@Model.StudentID" class="btn-action">Edit</a>
<a href="/Home/Delete/@Model.StudentID" class="btn-danger">Delete</a>
