@{
    ViewData["Title"] = "Student Login";
}

@section Styles {
    <style>
        .form-container {
            margin-top: 80px;
        }

        h2 {
            font-size: 28px;
            color: rgb(0, 0, 0);
            font-family: Georgia, 'Times New Roman', Times, serif;
            letter-spacing: 1px;
        }

        .nav-bar {
            background-color: rgb(0, 10, 33);
            width: 100%;
            position: fixed;
            height: 70px;
            z-index: 5;
            top: 0;
            left: 0;
        }

        .nav-bar ul {
            margin-top: 20px;
            padding: 0;
            justify-content: center;

            align-items: center;
            text-align: center;
            gap: 5%;
            display: flex;
            flex-direction: row;
            color: white;
            list-style: none;
        }

        a {
            text-decoration: none;
            color: white;

        }

        .nav-bar ul>li:hover {
            color: rgb(255, 209, 156);
        }

        a:hover {
            color: rgb(255, 209, 156);
        }

        #reg-btn {
            background-color: rgb(215, 111, 0);
            border-radius: 10px;
            padding: 4px;
            width: 80px;
        }

        .bg-div {
            width: 100%;
            margin-top: 70px;
            height: 600px;
            background-image: url('../img/friends.jpg');

            background-size: cover;

            background-position: center;

            background-repeat: no-repeat;

            display: flex;
            justify-content: center;

            align-items: center;

            position: relative;

            z-index: 1;
        }

        #submit-btn {
            display: flex;
            justify-content: center;
            align-items: center;
            background-color: rgb(215, 111, 0);
        }

        .bg-div::before {
            content: "";
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(3, 3, 37, 0.4);
            z-index: -1;

        }
    </style>

}

<header class=nav-bar>
    <nav>
        <ul>
            <li><a href="/#">Home</a></li>
            <li><a href="/#">About us</a></li>
            <li><a href="/#">Contact Us</a></li>
            <li><a href="/#">Book an Appointment</a></li>
            <li id="reg-btn"> <a href="/Home/Register">Register</a></li>
        </ul>


    </nav>


</header>



<div class="bg-div">

</div>

<div class="form-container">.
    <h2>Login</h2>
    <form method="post" asp-action="StudentLogin">
        <div>
            <label>Email:</label>
            <input type="email" name="email" required />
        </div>
        <div>
            <label>Password:</label>
            <input type="password" name="password" required />
        </div>
        <button id="submit-btn" type="submit">Login</button>
    </form>

</div>
@if (ViewBag.Error != null)
{
    <p style="color:red">@ViewBag.Error</p>
}