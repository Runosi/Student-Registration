@model WebProject.Models.Student
@{
    ViewData["Title"] = "Register";
}

@section Styles {
    <style>
        body {
            margin: 0;
            min-height: 100vh;
            height: 100%;
            padding: 0;
            width: 100%;
            background-color: white;

        }

        #submit-btn {
            background-color: rgb(215, 111, 0);
        }

        img {
            height: 450px;
            border-radius: 30px;
        }

        h2 {
            font-size: 28px;
            color: white;
            font-family: Georgia, 'Times New Roman', Times, serif;
            letter-spacing: 1px;
        }

        .nav-bar {
            background-color: rgb(0, 10, 33);
            width: 100%;
            position: fixed;
            height: 70px;
            z-index: 5;
            top: 0;
            left: 0;
        }

        .nav-bar ul {
            margin-top: 20px;
            padding: 0;
            justify-content: center;

            align-items: center;
            text-align: center;
            gap: 5%;
            display: flex;
            flex-direction: row;
            color: white;
            list-style: none;
        }

        a {
            text-decoration: none;
            color: white;

        }

        .nav-bar ul>li:hover {
            color: rgb(255, 209, 156);
        }

        a:hover {
            color: rgb(255, 209, 156);
        }

        #reg-btn {
            background-color: rgb(215, 111, 0);
            border-radius: 10px;
            padding: 4px;
            width: 80px;
        }

        .outer {
            width: 100%;
            margin-top: 70px;
            min-height: 100vh;
            background-image: url('../img/books.jpg');

            background-size: cover;

            background-position: center;

            background-repeat: no-repeat;

            display: flex;
            justify-content: center;

            align-items: center;

            position: relative;

            z-index: 1;
        }

        .outer::before {
            content: "";
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(3, 3, 37, 0.7);
            z-index: -1;

        }
    </style>
}





<div asp-validation-summary="All"></div>

<header class=nav-bar>
    <nav>
        <ul>
            <li><a href="/#">Home</a></li>
            <li><a href="/#">About us</a></li>
            <li><a href="/#">Contact Us</a></li>
            <li><a href="/#">Book an Appointment</a></li>
            <li id="reg-btn"> <a href="/Home/Register">Register</a></li>
        </ul>


    </nav>


</header>

<div class="outer">



    <form asp-action="Register" method="post">
        <h2>New Student Intake Form</h2>
        <div class="form-img-container">
            <img src="~/img/smiles.jpg" alt="students">
        </div>

        <div>
            <label asp-for="FirstName">First Name</label>
            <input asp-for="FirstName" />
        </div>
        <div>
            <label asp-for="MiddleName">Middle Name</label>
            <input asp-for="MiddleName" />
        </div>
        <div>
            <label asp-for="LastName">Last Name</label>
            <input asp-for="LastName" />
        </div>
        <div>
            <label asp-for="Email"></label>
            <input asp-for="Email" type="email" />
        </div>
        <div>
            <label>Create a password</label>
            <input type="password" asp-for="Password" required />
        </div>
        <div>
            <label asp-for="Phone"></label>
            <input asp-for="Phone" />
        </div>
        <div>
            <label asp-for="Program"></label>
            <input asp-for="Program" />
        </div>
        <div>
            <label asp-for="EnrollmentType">Enrollment Type</label><br />
            <input type="radio" asp-for="EnrollmentType" value="Full-Time" /> Full-Time
            <input type="radio" asp-for="EnrollmentType" value="Part-Time" /> Part-Time
        </div>
        <div>
            <label asp-for="ExpectedGraduationYear">Expected Graduation Year</label>
            <input asp-for="ExpectedGraduationYear" type="number" />
        </div>
        <div>
            <label asp-for="DateOfBirth">Date Of Birth</label>
            <input asp-for="DateOfBirth" type="date" />
        </div>
        <div>
            <label asp-for="Nationality"></label>
            <input asp-for="Nationality" />
        </div>
        <div>
            <label asp-for="Gender">Gender</label><br />
            <input type="radio" asp-for="Gender" value="Male" /> Male
            <input type="radio" asp-for="Gender" value="Female" /> Female
            <input type="radio" asp-for="Gender" value="Other" /> Other
        </div>

        <div>
            <label asp-for="StreetAddress">Street Address</label>
            <input asp-for="StreetAddress" />
        </div>
        <div>
            <label asp-for="City"></label>
            <input asp-for="City" />
        </div>
        <div>
            <label asp-for="Province"></label>
            <input asp-for="Province" />
        </div>
        <div>
            <label asp-for="ZipCode">Zip Code</label>
            <input asp-for="ZipCode" />
        </div>
        <div>
            <label asp-for="Country"></label>
            <input asp-for="Country" />
        </div>
        <div>
            <label asp-for="AdditionalInfo">Additional Info</label>
            <textarea asp-for="AdditionalInfo"></textarea>
        </div>
        <button id="submit-btn" type="submit">Submit</button>

    </form>

</div>